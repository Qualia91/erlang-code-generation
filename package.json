{
	"name": "erlang-code-generation",
	"displayName": "erlang-code-generation",
	"description": "Generates boiler plate erlang code",
	"version": "0.0.16",
	"publisher": "bocdev", 
	"license": "LICENSE.md",
	"repository": {
		"type": "git",
		"directory": "https://github.com/Qualia91/erlang-code-generation.git"
	  },
	"engines": {
		"vscode": "^1.59.0"
	},
	"icon": "images/icon_128.png",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:erlang-code-generation.comment-gen",
		"onCommand:erlang-code-generation.module-gen",
		"onView:erlang-project-outline",
		"onCommand:erlang-project-outline.refreshEntry"
	],
	"main": "./dist/extension.js",
	"files": ["./templates/sectionCommentTemplate.txt"],
	"contributes": {
		"snippets": [
			{
			  "language": "erlang",
			  "path": "./snippets/erlang.json"
			}
		],
		"views": {
		  "erlang-code-generation-project-explorer": [
			{
			  "id": "package-dependencies",
			  "name": "Dependencies"
			},
			{
			  "id": "erlang-project-outline",
			  "name": "Project Outline"
			}
		  ]
		},
		"commands": [
			{
				"command": "erlang-code-generation.comment-gen",
				"title": "Erlang: Comment Gen"
			},
			{
				"command": "erlang-code-generation.module-gen",
				"title": "Erlang: Module Gen"
			},
			{
				"command": "erlang-project-outline.refreshEntry",
				"title": "Refresh",
				"icon": {
				  "light": "images/light/refresh.svg",
				  "dark": "images/dark/refresh.svg"
				}
			}
		],
		"menus": {
			"view/title": [
			  {
				"command": "erlang-project-outline.refreshEntry",
				"when": "view == erlang-project-outline",
				"group": "navigation"
			  }
			]
		},
		"viewsContainers": {
			"activitybar": [
			  {
				"id": "erlang-code-generation-project-explorer",
				"title": "Erlang Project Explorer",
				"icon": "images/erlang-icon.svg"
			  }
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.59.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"ts-loader": "^9.2.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	}
}
